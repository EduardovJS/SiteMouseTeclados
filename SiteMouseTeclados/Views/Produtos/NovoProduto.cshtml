@model ProdutoViewModel

<div class="container mt-5">
    <h1 class="text-center mb-5">Cadastrar Produto</h1>
    <form asp-controller="Produtos" asp-action="NovoProduto" method="post">
        <!-- Nome -->
        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" required>
        </div>

        <!-- Resumo -->
        <div class="mb-3">
            <label asp-for="Resumo" class="form-label">Resumo</label>
            <textarea asp-for="Resumo" class="form-control" rows="5" placeholder="Digite um resumo do produto" required></textarea>
        </div>

        <!-- Categoria -->
        <div class="mb-3">
            <label asp-for="Categoria" class="form-label">Categoria</label>
            <select asp-for="Categoria" class="form-select" required>
                <option value="" disabled selected>Selecione uma categoria</option>
                <option value="1">Mouse</option>
                <option value="2">Teclado</option>
            </select>
        </div>

        <!-- Valor -->
        <div class="mb-3">
            <label asp-for="Valor" class="form-label">Valor</label>
            <input asp-for="Valor" class="form-control" placeholder="Digite o valor do produto" required>
        </div>

        <!-- Imagem -->
        <div class="mb-3">
            <label asp-for="ImageFileName" class="form-label">Nome do Arquivo da Imagem</label>
            <input asp-for="ImageFileName" class="form-control" placeholder="Ex.: imagem.jpg">
        </div>

        <!-- Botões -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <button type="reset" class="btn btn-secondary">Limpar</button>
        </div>
    </form>
</div>
